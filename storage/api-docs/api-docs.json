                        "application/json": {
                            "schema": {
                                "required": [
                                    "title",
                                    "artist_id",
                                    "release_year"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "Thriller"
                                    },
                                    "artist_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "release_year": {
                                        "type": "integer",
                                        "example": 1982
