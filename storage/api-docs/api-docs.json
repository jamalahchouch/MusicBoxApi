                "responses": {
                    "201": {
                        "description": "Album créé avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 10
                                        },
                                        "title": {
                                            "type": "string",
                                            "example": "Thriller"
                                        },
                                        "artist_id": {
                                            "type": "integer",
                                            "example": 1
