        "/api/albums/{id}": {
            "put": {
                "tags": [
                    "Albums"
                ],
                "summary": "Mettre à jour un album",
                "description": "Met à jour les informations d’un album existant",
                "operationId": "7ce4b18f8619c4569c95160d86e23ff3",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID de l'album",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "Bad"
                                    },
                                    "artist_id": {
                                        "type": "integer",
                                        "example": 1
                                    },
                                    "release_year": {
                                        "type": "integer",
                                        "example": 1987
